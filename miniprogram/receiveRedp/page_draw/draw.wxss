.canvas-wrapper {
  margin-top: 3vh;
  background: #FFFFFF;
  box-shadow: 0px -1px 20px 0px #E3E9FF, 0px 2px 10px 0px #E5EBFF;
  border-radius: 28px 28px 0px 0px;
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

#canvas {
  background: #FFFFFF;
  border-radius: 28px 28px 0px 0px;
}

/* pages/emotion/emotion.wxss */
.layout {
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.header {
  margin-top: 2vh;
  width: 650rpx;
  height: 16.8vh;
  background: linear-gradient(45deg, #8B9CFF 0%, #E5EBFF 100%);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content {
  width: 650rpx;
  box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.1);
  border-radius: 16px;
  height: 53.4vh;
  position: relative;
}

.notice {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #8294FF;
}

.footer {
  position: relative;
  height: 18vh;
  flex-direction: column;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.getButton {
  width: 570rpx;
  height: 90rpx;
  border-radius: 50rpx;
  background: #FFDBE2;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #FE6B88;
  box-shadow: 0 8rpx 32rpx 0 #FFE3E3;
}

.bottomWrapper {
  padding-bottom: 4vh;
  display: flex;
}

.bottomText {
  font-size: 26rpx;
  /* font-family: PingFangSC-Regular, PingFang SC; */
  font-weight: 400;
  color: #8294FF;
  line-height: 18px;
}

.headerContent {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.line1 {
  font-size: 30rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 21px;
  margin-left: 50rpx;
}

.line2 {
  font-size: 72rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 6.9vh;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 1.4vh;
  margin-bottom: 1.4vh;
}

.clear-canvas {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;

  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #E5EBFF;
  left: 50rpx;
  top: -15vh;
  margin: 0;

}

.eraser {
  width: 60rpx;
  height: 60rpx;
}