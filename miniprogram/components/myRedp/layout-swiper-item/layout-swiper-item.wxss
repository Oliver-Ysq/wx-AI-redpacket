/* components/myRedp/layout-swiper-item/layout-swiper-item.wxss */
.myLayout {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}


.backgroundWrapper {
  height: calc(3.5vh + 9.7vh);
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.bg {
  position: absolute;
  top: 2.5vh;
  left: 6.7vw;
  z-index: 0;
  width: 82.9vw;
  height: 9.7vh;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  z-index: 1;
  border-radius: 50%;
}

.center-text {
  display: flex;
  justify-content: center;
  align-items: center;
}

.nameColor {
  color: #8294FF;
  margin-right: 0.5rem;
}

.numberWrapper {
  height: 9vh;
  width: 100vw;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 2.5vh;
}

.number-item {
  width: 40vw !important;
  display: flex;
  flex-direction: column;
  width: 100vw;
  justify-content: space-between;
  align-items: center;
}

.number-number {
  color: #FE6B88;
  font-size: 28px;
}

.recordListWrapper {
  flex: 1;
  width: 100vw;
  padding-top: 2.5vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: scroll;
}