.enterBtn {
    font-size: 32rpx;
    position: relative;
    top: 50vh;
    transform: translateY(-40px);
}

.layout {
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.btnBox {
    height: 15vh;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.active {
    position: absolute;
    bottom: -2.055vh;
    height: 0.685vh;
    width: 112rpx;
    background: #8294ff;
    border-radius: 3px;
    transition: all 0.3s;
    right: 0;
}

.btnWrapper {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.btnBorder {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 9px;
}

.btnText {
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #000000;
    line-height: 20px;
}

.btnImg {
    width: 50rpx;
    height: 50rpx;
}

.content {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
}

.footer {
    height: 22vh;
    flex-direction: column;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.getButton {
    width: 570rpx !important;
    height: 90rpx !important;
    border-radius: 50rpx;
    background: #ffdbe2;

    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    font-weight: 600;
    color: #fe6b88;
    box-shadow: 0 8rpx 32rpx 0 #ffe3e3;
}

.bottomWrapper {
    padding-bottom: 4vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fff;
}

.bottomText {
    font-size: 26rpx;
    /* font-family: PingFangSC-Regular, PingFang SC; */
    font-weight: 400;
    color: #8294ff;
    line-height: 18px;
}

.bottomImg {
    height: 30rpx;
    width: 30rpx;
    margin-right: 5px;
}

.Input {
    height: 9.3vh;
    width: 650rpx;
    background: #ffffff;
    box-shadow: 0px 2px 10px 0px #e5ebff;
    border-radius: 16px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;

    position: relative;
    overflow: hidden;
}

.bgImg {
    width: 66rpx;
    height: 100rpx;
    position: absolute;
    left: 0rpx;
    z-index: 0;
    opacity: 1;
}

.inputTitle {
    padding-left: 40rpx;
    z-index: 1;
}

.inputText {
    font-size: 30rpx;
    /* font-family: PingFangSC-Semibold, PingFang SC; */
    font-weight: 600;
    color: #000000;
}

.inputWrapper {
    display: flex;
    flex-direction: row;
    padding-right: 40rpx;
    align-items: center;
}

.setQuestion {
    min-height: 9.3vh;
    width: 650rpx;
    background: #ffffff;
    box-shadow: 0px 2px 10px 0px #e5ebff;
    border-radius: 16px;
}

.questionInput {
    width: inherit;
    height: 9.3vh;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: relative;
    overflow: hidden;
}

.questionBox {
    height: 16vh;
    width: 570rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
    position: relative;
    /* top: -20rpx; */
    /* overflow: hidden; */
    display: flex;
    flex-direction: column;
}

.input {
    padding-right: 9px;
    text-align: right;
}

.placeHolder {
    font-size: 30rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #8294ff;
    height: 9.3vh !important;
}

.mid {
    display: flex;
    align-items: center;
}

.rightArrow {
    width: 24rpx;
    height: 24rpx;
}

.quesItem {
    padding: 0.5vh 22rpx;
    background: #e5ebff;
    border-radius: 38rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #8294ff;

    display: inline-block;
    margin-right: 20rpx;
}

.firstLine {
    margin-top: 1vh;
}

.secondLine {
    margin-top: 1.5vh;
}

.next {
    font-size: 26rpx;
    /* font-family: PingFangSC-Semibold, PingFang SC; */
    font-weight: 600;
    color: #8294ff;
    line-height: 18px;
    letter-spacing: 1px;
    width: 570rpx;

    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    padding-bottom: 1.33vh;
}

.refreshWrapper {
    display: flex;
    justify-content: center;
    align-items: center;
}

.refresh {
    height: 32rpx;
    width: 32rpx;
    margin-right: 4px;
}

.itemImg {
    width: 100rpx;
    height: 100rpx;
}

.emotionWrapper {
    display: inline-flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    margin-right: 40rpx;
}

.emotion-text {
    font-weight: 400;
    color: #8294ff;
    font-size: 28rpx;
    margin-top: 1.38vh;
}

.action-box {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
}

.action-item {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2vh;
}

.action-icon {
    height: 100rpx;
    width: 100rpx;
}

.action-txt {
    margin-top: 1.6vh;

    font-size: 28rpx;
    color: #8294ff;
}

.zidingyi {
    flex-grow: 1;
    width: 650rpx;
    border-bottom: 1px solid #e5ebff;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 0.5vh;
}

.mid-line {
    width: 90%;
    height: 1px;
    background: #e5ebff;
}